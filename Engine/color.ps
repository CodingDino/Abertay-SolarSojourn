// color.ps
//      Pixel shader for handling simple colored shapes with no lighting/texture


// |----------------------------------------------------------------------------|
// |						     Type Definitions					   			|
// |----------------------------------------------------------------------------|
struct PixelInputType
{
    float4 position : SV_POSITION;
    float4 color : COLOR;
};


// |----------------------------------------------------------------------------|
// |						      Pixel Shader				    	   			|
// |----------------------------------------------------------------------------|
float4 ColorPixelShader(PixelInputType input) : SV_TARGET
{
    return input.color;
}