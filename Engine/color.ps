// color.ps
//      Pixel shader for handling simple colored shapes with no lighting/texture


// |----------------------------------------------------------------------------|
// |                                 Globals                                    |
// |----------------------------------------------------------------------------|
cbuffer ColorBuffer
{
    float4 color;
};


// |----------------------------------------------------------------------------|
// |                             Type Definitions                               |
// |----------------------------------------------------------------------------|
struct PixelInputType
{
    float4 position : SV_POSITION;
    float2 tex : TEXCOORD0;
    float3 normal : NORMAL;
};


// |----------------------------------------------------------------------------|
// |                              Pixel Shader                                  |
// |----------------------------------------------------------------------------|
float4 ColorPixelShader(PixelInputType input) : SV_TARGET
{
    return color;
}